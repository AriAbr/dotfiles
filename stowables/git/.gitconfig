[init]
    defaultBranch = master

[user]
	name = <YOUR FULL NAME>
	email = <YOUR EMAIL ADDRESS USED IN YOUR GITHUB ACCOUNT>

[github]
    user = <YOUR GITHUB USERNAME>

[core]
	autocrlf = input
	excludesfile = ~/.gitignore
    editor = code --wait

[status]
    submoduleSummary = true

[push]
    followTags = true


[fetch]
    recurseSubmodules = on-demand

[commit]
    verbose = true
    template = ~/.git-commit-template

[alias]
    unstage = "reset HEAD --"
    pam="!git checkout $(git branch | sed -e 's/\\*//' | fzf)"


[diff]
    submodule = log
    tool = vscode

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
	keepBackup = false
    tool = vscode

[mergetool "vscode"]
    cmd = code --wait $MERGED
